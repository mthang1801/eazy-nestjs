<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='/styles/restore-password.css' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC'
      crossorigin='anonymous'
    />
    <title>DDEVECOM restore password</title>
  </head>
  <body>

    <div class='wrapper'>
      <form class='card'>
        <div class='card-header'><h3>Khôi phục tài khoản</h3></div>
        <div class='card-body text-primary'>
          <div id='error' class='text-center text-danger'></div>
          <div id='success' class='text-center text-success'></div>
          <div id='form-inputs'>
            <div class='form-group my-3'>
              <label for='password'>Mật khẩu mới</label>
              <input
                type='password'
                class='form-control'
                id='password'
                placeholder='Nhập mật khẩu mới'
                required
              />
            </div>
            <div class='form-group my-3'>
              <label for='confirm-password'>Nhập lại MK:</label>
              <input
                type='password'
                class='form-control'
                id='confirm-password'
                placeholder='Xác nhận MK'
              />
            </div>
          </div>
          <div class='form-group text-center'>
            <button type='button' id='submit' class='btn btn-primary'>Cập nhật</button>
            <a href='/auth/login' class='btn btn-success d-none'>Về trang đăng
              nhập</a>
          </div>
        </div>
      </form>
    </div>

    <script
      src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js'
    ></script>
    <script src='/js/restore-password.js'></script>

  </body>
</html>